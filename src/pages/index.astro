---
import AllProjects from '@components/projects/Projects.astro';
import { Container } from '@components/Container';
import { getCollection } from 'astro:content';
import BlueSkyIcon from '~icons/ri/bluesky-line';
import LinkedInIcon from '~icons/ri/linkedin-box-fill';
import GithubIcon from '~icons/ri/github-fill';

import BaseLayout from '@layouts/BaseLayout.astro';

const socialLinks = [
  {
    href: 'https://bsky.app/profile/tysons.bsky.social',
    ariaLabel: 'Follow on Blue Sky',
    Icon: BlueSkyIcon,
  },
  {
    href: 'https://www.linkedin.com/in/tyson-suttle/',
    ariaLabel: 'Follow on LinkedIn',
    Icon: LinkedInIcon,
  },
  {
    href: 'https://github.com/Tyson910',
    ariaLabel: 'Follow on GitHub',
    Icon: GithubIcon,
  },
] as const satisfies {
  href: string;
  ariaLabel: string;
  Icon: (props: React.SVGProps<SVGSVGElement>) => React.ReactElement;
}[];

const featuredSnippetsPosts = await getCollection('snippets', (stuff) => {
  // we only need featured posts
  return stuff.data.isFeaturedPost;
});
---

<BaseLayout
  meta_title="Tyson Suttle"
  meta_description="Learn about Tyson Suttle"
>
  <Container innerClassName="pt-9">
    <div class="max-w-2xl">
      <h1
        class="text-4xl font-bold tracking-tight text-zinc-800 sm:text-5xl dark:text-zinc-100"
      >
        Full Stack Software Developer
      </h1>
      <p class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
        Iâ€™m Tyson, a software developer based in Phoenix, Arizona. I am a
        Software Developer specializing in Front-End development and
        creating accessible UIs. I'm experienced in using HTML, CSS,
        JavaScript, and various JS frameworks to create fast, mobile
        friendly, & effective websites for my clients.
      </p>
      <div class="mt-6 flex gap-6">
        {
          socialLinks.map(({ ariaLabel, href, Icon }) => (
            <a class="group -m-1 p-1" href={href} aria-label={ariaLabel}>
              <Icon className="size-6 text-zinc-500 transition group-hover:text-zinc-600 dark:text-zinc-400 dark:group-hover:text-zinc-300" />
            </a>
          ))
        }
      </div>
    </div>
  </Container>
  <Container outerClassName="py-16 px-4 sm:px-6">
    <div class="border-b border-zinc-200 py-5">
      <div
        class="-ml-4 -mt-4 flex flex-wrap items-center justify-between sm:flex-nowrap"
      >
        <div class="ml-4 mt-4">
          <h2 class="text-base font-semibold text-zinc-900 dark:text-zinc-50  ">
            Code Snippets
          </h2>
          <p class="mt-1 text-sm text-zinc-500 dark:text-zinc-200">
            Code snippets I find myself using often that are easy to copy &
            paste.
          </p>
        </div>
        <div class="ml-4 mt-4 shrink-0">
          <button
            type="button"
            class="relative inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
            >View All Posts</button
          >
        </div>
      </div>
    </div>
    <div class="flex flex-col gap-16 ,mt-10">
      <ul role="list" class="divide-y divide-zinc-100">
        {
          featuredSnippetsPosts.map((post) => (
            <li class="flex gap-x-4 py-5 px-3 hover:bg-zinc-50 dark:hover:bg-zinc-800">
              <a href={`/blog/snippets/${post.slug}`} class="flex-auto">
                <div class="flex items-baseline justify-between ">
                  <div class="flex flex-col text-sm/6 gap-y-1.5 mb-2">
                    <p class="font-semibold text-zinc-900 dark:text-zinc-50">
                      {post.data.title}
                    </p>
                    <div class="flex flex-row gap-x-2 whitespace-nowrap">
                      {post.data.tags.map((tag) => (
                        <span class="inline-flex items-center rounded-full bg-zinc-50 px-1.5 py-0.5 text-xs font-medium text-zinc-600 ring-1 ring-inset ring-zinc-500/10">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>
                  <p class="flex-none, text-xs text-zinc-600">
                    <time datetime={post.data.dateCreated}>
                      Created on{' '}
                      {new Date(post.data.dateCreated).toLocaleDateString(
                        'en-US',
                        {
                          // weekday: 'long',
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric',
                        }
                      )}
                    </time>
                  </p>
                </div>
                <p class="mt-1 line-clamp-2 text-sm/6 text-zinc-600">
                  {post.data.meta_description}
                </p>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </Container>
  <!-- <div
    class="mx-auto grid max-w-xlm grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2"
  >
    <div class="space-y-10 lg:pl-16 xl:pl-24">
      <Newsletter />
      <Resume />
    </div>
  </div> -->
</BaseLayout>
