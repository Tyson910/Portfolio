---
import { getCollection } from 'astro:content';
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const blogEntries = await getCollection('tech', ({ data, slug }) => {
    // filter out drafts
    return data.draft !== true && slug.startsWith('form-handler');
  });

  return blogEntries.map((blogPost) => ({
    params: {
      formHandlerBlogPost: blogPost.slug.replace('form-handler/', ''),
    },
    props: { blogPost },
  }));
}
// 2. When it's time to render, you can get the entry directly from the prop
const { Content } = await Astro.props.blogPost.render();
---

<Content />
