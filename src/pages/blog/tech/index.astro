---
import BlogHubLayout from '@layouts/BlogHubLayout.astro';
import BlogHero from '@components/blog/Hero.astro';
import { getCollection } from 'astro:content';

// Get all entries from a collection. Requires the name of the collection as an argument.
const allPublishedTechBlogPosts = await getCollection(
  'tech',
  ({ data }) => {
    // filter out drafts
    return data.draft !== true;
  }
);
---

<BlogHubLayout
  title="Welcome to My Tech Blog"
  meta_description="This is a hub for all Tech related content I've created"
  meta_title="Welcome to my Tech Blog"
  posts={allPublishedTechBlogPosts}
>
  <BlogHero title="Welcome to my Blog" />
</BlogHubLayout>
