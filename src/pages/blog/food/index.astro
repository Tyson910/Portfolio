---
import { getCollection } from 'astro:content';
import BlogHubLayout from '@layouts/BlogHubLayout.astro';
// Get all entries from a collection. Requires the name of the collection as an argument.
const allPublishedFoodBlogPosts = await getCollection(
  'food',
  ({ data }) => {
    // filter out drafts
    return data.draft !== true;
  }
);
---

<BlogHubLayout
  title="Welcome to My Food Blog"
  meta_description="This is a hub for all food related content I've created"
  meta_title="Welcome to my Food Blog"
  posts={allPublishedFoodBlogPosts}
/>
