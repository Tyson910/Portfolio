---
import { SocialMediaLinks } from '@components/SocialMediaLinks';
---

<section
  class="w-full bg-gradient-to-tl to-[#efd5ff] via-[#efd5ff] from-[#515ada]"
>
  <div
    class="flex flex-col items-center md:items-start px-5 gap-5 lg:container py-20"
  >
    <div
      class="flex flex-col md:text-center lg:text-left gap-y-5 lg:gap-y-10 text-purple-shade-3"
    >
      <div>
        <h1
          class="-ml-3 text-5xl lg:text-7xl font-bold flex flex-col gap-y-5"
        >
          Tyson Suttle
          <small
            class="ml-2 text-2xl lg:text-4xl lg:font-light"
          >
            Software & Web Developer
          </small>
        </h1>
        <SocialMediaLinks />
      </div>
      <div
        class="mx-auto max-w-2xl lg:max-w-5xl"
      >
        <div class="max-w-xl">
          <p>
            I am a Software Developer
            specializing in Front-End
            development and creating
            accessible UIs. I'm
            experienced in using HTML,
            CSS, JavaScript, and various
            JS frameworks to create
            fast, mobile friendly, &
            effective websites for my
            clients
          </p>
          <div
            class="font-semibold text-2xl mt-5"
          >
            <a
              href="/about"
              class="underline"
              >Learn More About Me!</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  section {
    background: linear-gradient(
      90deg,
      #efd5ff 0%,
      #515ada 100%
    );
  }
</style>
