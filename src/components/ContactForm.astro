---
const inputClasses = 'mt-3';
const labelClasses = '';
import classNames from 'classnames';
---

<div class="container px-12">
  <form
    id="contact-form"
    class="grid grid-cols-1 lg:grid-cols-2 gap-x-20 gap-y-10"
  >
    <label
      class={labelClasses}
      for="first-name"
      >First Name
      <input
        required
        type="text"
        name="first-name"
        id="first-name"
        class={inputClasses}
      />
    </label>
    <label
      class={labelClasses}
      for="last-name"
      >Last Name
      <input
        required
        type="text"
        name="last-name"
        id="last-name"
        class={inputClasses}
      />
    </label>
    <label
      class={labelClasses}
      for="phoneNum"
      >Phone Number
      <input
        required
        type="tel"
        name="phoneNum"
        id="phoneNum"
        class={inputClasses}
      />
    </label>
    <label
      class={labelClasses}
      for="email"
      >Email Address
      <input
        required
        type="email"
        name="email"
        id="email"
        class={inputClasses}
      />
    </label>
    <label
      for="inquiry"
      class={classNames(
        'col-span-full',
        labelClasses
      )}
    >
      Message
      <textarea
        required
        name="inquiry"
        id="inquiry"
        placeholder="Please include all relevant information"
        class={classNames(
          inputClasses,
          'resize-none h-32 py-3 px-2.5 placeholder:italic lg:col-span-full'
        )}></textarea>
    </label>
    <button
      type="submit"
      class="btn h-max self-end rounded py-4 bg-slate-400 lg:col-start-2"
      >Send Message</button
    >
  </form>
</div>
